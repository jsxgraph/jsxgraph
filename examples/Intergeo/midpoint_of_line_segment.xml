<!-- This example illustrates the midpoint_of_line_segment constraint -->


<construction xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xml/intergeo.xsd">
	<elements>
		<point id="A">
			<homogeneous_coordinates>
				<double>-3</double>
				<double>0</double>
				<double>1</double>
			</homogeneous_coordinates>
		</point>
		<point id="B">
			<homogeneous_coordinates>
				<double>3</double>
				<double>0</double>
				<double>1</double>
			</homogeneous_coordinates>
		</point>
		<point id="C">
			<homogeneous_coordinates>
				<double>0</double>
				<double>0</double>
				<double>1</double>
			</homogeneous_coordinates>
		</point>
		<line_segment id="s">
			<homogeneous_coordinates>
				<double>-3</double>
				<double>0</double>
				<double>1</double>
			</homogeneous_coordinates>
			<homogeneous_coordinates>
				<double>3</double>
				<double>0</double>
				<double>1</double>
			</homogeneous_coordinates>
		</line_segment>
	</elements>
	<constraints>
		<line_segment_by_points>
			<line_segment out="true">s</line_segment>
			<point>A</point>
			<point>B</point>
		</line_segment_by_points>
		<midpoint_line_segment>
			<point out="true">C</point>
			<line_segment>s</line_segment>
		</midpoint_line_segment>
	</constraints>
</construction>
